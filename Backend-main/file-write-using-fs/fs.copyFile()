1.
const fs = require('fs');

fs.copyFile("hello.txt", "./copy/pradhan.txt", function(err) {
    if (err) {
        console.log("Error while copying:", err);
    } else {
        console.log("done");
    }
});


//done





2.
const fs = require('fs');

fs.copyFile("hello.txt", "./copy2/pradhan.txt", function(err) {
    if (err) {
        console.log("Error while copying:", err);
    } else {
        console.log("done");
    }
});


